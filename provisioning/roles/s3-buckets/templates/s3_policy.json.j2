{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "s3:ListAllMyBuckets",
            "Resource": "arn:aws:s3:::*"
        },
        {
            "Effect": "Allow",
            "Action": "s3:*",
            "Resource": [
                "arn:aws:s3:::{{ application_name }}-{{ application_environment }}",
                "arn:aws:s3:::{{ application_name }}-{{ application_environment }}/*"
            ]
        }
    ]
}
