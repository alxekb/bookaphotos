#photosessions-result
  - @photosessions.each do |photosession|
    .photosession-item
      .row
        .col-5
          .carousel.slide{"data-ride" => "carousel", id: "coverCarousel#{photosession.id}"}
            %ol.carousel-indicators
              %li.active{"data-slide-to" => "0", "data-target" => "#coverCarousel#{photosession.id}"}
              %li{"data-slide-to" => "1", "data-target" => "#coverCarousel#{photosession.id}"}
              %li{"data-slide-to" => "2", "data-target" => "#coverCarousel#{photosession.id}"}
            .carousel-inner
              .carousel-item.active
                %img.d-block.w-100{:alt => "First slide", :src => "http://lorempixel.com/320/300"}/
              .carousel-item
                %img.d-block.w-100{:alt => "Second slide", :src => "http://lorempixel.com/320/300"}/
              .carousel-item
                %img.d-block.w-100{:alt => "Third slide", :src => "http://lorempixel.com/320/300"}/
            %a.carousel-control-prev{"data-slide" => "prev", :href => "#coverCarousel#{photosession.id}", :role => "button"}
              %span.carousel-control-prev-icon{"aria-hidden" => "true"}
              %span.sr-only Previous
            %a.carousel-control-next{"data-slide" => "next", :href => "#coverCarousel#{photosession.id}", :role => "button"}
              %span.carousel-control-next-icon{"aria-hidden" => "true"}
              %span.sr-only Next
        .col-7
          .photosession-item-content
            .rating.d-inline-block
              1 2 3 4 5
            .comments.d-inline-block
              (12 comments)
            .thematics.d-inline-block
              - photosession.themes.each do |theme|
                %span.badge.badge-pill.badge-success
                  = theme.title
            .clearfix
            .date.d-inline-block
              Август, 12
            .time.d-inline-block
              16.00 - 17.00
            .cities
              - photosession.cities.each do |city|
                %span.badge.badge-pill.badge-secondary
                  = city.title
            .title
              = photosession.title
            .price
              = photosession.price
            .description
              = photosession.description
            .book
              = link_to 'Book', root_path, class: 'btn btn-success'

= paginate @photosessions, theme: 'twitter-bootstrap-4'
