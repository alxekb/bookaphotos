%h1 Listing locations

%table
  %thead
    %tr
      %th
      %th
      %th
      %th

  %tbody
    - @locations.each do |location|
      %tr
        %td= location.name
        %td= link_to 'Show', location, data: { turbolinks: false }
        %td= link_to 'Edit', edit_location_path(location), data: { turbolinks: false }
        %td= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Location', new_location_path, data: { turbolinks: false }
